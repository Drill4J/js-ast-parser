{
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": ["/node_modules/"],
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json",
      "diagnostics": false
    }
  },
  "testMatch": ["**/__tests__/integration/*.+(ts|tsx|js)"]
}

{
  "name": "drill4js-cli",
  "version": "0.2.6",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "ava": "^2.4.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.5.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.2"
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "files": [
    "dist/**/*"
  ],
  "bin": "./dist/src/index.js",
  "dependencies": {
    "@ava/babel-plugin-throws-helper": "^4.0.0",
    "@typescript-eslint/parser": "^2.8.0",
    "@typescript-eslint/typescript-estree": "^2.8.0",
    "axios": "^0.19.0",
    "babel-plugin-ava-throws-helper": "^1.0.0",
    "commander": "^4.0.1",
    "eslint": "^6.6.0",
    "fast-glob": "^3.1.1",
    "fs-extra": "^8.1.0",
    "recursive-readdir": "^2.2.2",
    "recursive-readdir-synchronous": "0.0.4"
  },
  "type": "module",
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": false
      }
    },
    "testMatch": [
      "**/__tests__/integration/*.+(ts|tsx|js)"
    ]
  }
}
